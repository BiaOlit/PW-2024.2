<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>5 Seconds of Summer</title>
    <!-- Link do Bootstrap para estilizar os componentes -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilo para o header */
        header {
            background-color: #a52a2a;
            color: white;
            padding: 20px;
            text-align: center;
        }

        /* Estilo para os links da navbar */
        nav ul {
            list-style-type: none;
            padding: 0;
        }

        nav ul li {
            display: inline;
            margin: 0 15px;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 18px;
            transition: color 0.3s;
        }

        nav ul li a:hover {
            color: #f1c40f; /* Cor dourada ao passar o mouse */
        }

        /* Ajuste para o carrossel */
        .carousel-inner img {
            width: 100%;
            height: 100%;
        }

        /* Espaçamento para o carrossel */
        .carousel {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Header com a Navbar -->
    <header>
        <nav>
            <ul>
                <li><a href="/">Início</a></li>
                <li><a href="/discografia" style="text-decoration: underline;">Discografia</a></li>
                <li><a href="/membros">Membros</a></li>
                <li><a href="/historico">Histórico</a></li>
                <li><a href="/agenda">Agenda</a></li>
            </ul>
        </nav>
    </header>

    <!-- Carrossel -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/5sosteladefundo.webp" class="d-block w-100" alt="Imagem 1">
            </div>
            <div class="carousel-item">
                <img src="/images/5sosfoto7.jpg" class="d-block w-100" alt="Imagem 2">
            </div>
            <div class="carousel-item">
                <img src="/images/5sosfoto8.jpg" class="d-block w-100" alt="Imagem 3">
            </div>
            <div class="carousel-item">
                <img src="/images/5sosltmeera.jpg" class="d-block w-100" alt="Imagem 4">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Próximo</span>
        </a>
    </div>

    <!-- Inclusão do script do Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
